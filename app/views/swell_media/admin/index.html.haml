.row
	.col-xs-12
		%h1
			Hi
			= "#{current_user}!"

.row
	.col-sm-6
		.well

			%h2
				You have
				= number_to_currency( AllowanceTransaction.sum( :amount ).to_f / 100 )
			%p
				= number_to_currency Allowance.first.amount.to_f/100
				every
				= Allowance.first.interval_value
				= Allowance.first.interval_unit
				= Allowance.first.status
			%p
				%a{ href: main_app.allowance_index_path }
					Allowance History
