
.container-fluid
	.row
		.col-xs-10
			%ul.breadcrumb
				%li
					= link_to 'Admin', swell_media.admin_index_path
				%li
					%strong
						Picture Admin
						= "(#{pluralize @pictures.total_count, 'Picture'})"

		.col-xs-2
			%a.btn.btn-success{ data: { toggle: :modal, target: '#new_picture' } }
				%i.fa.fa-plus-square
				New
	.row
		.col-xs-6
			= raw paginate @pictures
		.col-xs-6
			= form_tag picture_admin_index_path, method: :get, class: 'pull-right form-inline' do
				= select_tag :status, options_from_collection_for_select( Picture.statuses, :first, :first, params[:status] ), { prompt: "-- All --", class: 'form-control' }
				= text_field_tag :q, params[:q], class: 'form-control'
				= submit_tag 'Search', class: 'btn btn-primary'
				= link_to 'Clear', picture_admin_index_path, class: 'btn btn-default btn-xs'

	.row
		.col-xs-12
			%table.table
				%thead
					%th
					%th
						Title
						%a{ href: picture_admin_index_path( sort_by: 'title', sort_dir: 'asc' ) }
							%i.fa.fa-arrow-up
						%a{ href: picture_admin_index_path( sort_by: 'title', sort_dir: 'desc' ) }
							%i.fa.fa-arrow-down
					
					%th
						Publish
						%a{ href: picture_admin_index_path( sort_by: 'publish_at', sort_dir: 'asc' ) }
							%i.fa.fa-arrow-up
						%a{ href: picture_admin_index_path( sort_by: 'publish_at', sort_dir: 'desc' ) }
							%i.fa.fa-arrow-down

					%th Status
					%th Category
					%th Tags
					%th
				%tbody
					- @pictures.each do |picture|
						%tr
							%td
								= image_tag picture.avatar.to_s, width: 50, class: 'img img-rounded'
							%td
								= link_to picture.title, edit_picture_admin_path( picture.id )
								%br
								= picture.path
							%td
								= picture.publish_at.to_s( :slashed_time )

							%td
								- if picture.published?
									.badge{ class: picture.status }
										Live
								- elsif picture.draft?
									.badge{ class: picture.status }
										Draft
								- elsif picture.active?
									.badge{ class: 'pending' }
										Pending
								- else
									.badge{ class: picture.status }
										= picture.status
							%td
								= picture.category.try( :name ) || 'None'
							%td
								= picture.tags.join(', ')
							%td
								.btn-group
									%button.btn.btn-mini.btn-default.dropdown-toggle{ data: { toggle: :dropdown } }
										%i.fa.fa-cog
										%b.caret
									%ul.dropdown-menu
										%li
											%a{ href: edit_picture_admin_path( picture.id ) }
												%i.fa.fa-pencil
												Edit
										
										%li
											%a{ href: preview_picture_admin_path( picture.id ) }
												%i.fa.fa-eye
												Preview
										%li.divider
										%li
											%a{ href: picture_admin_path( picture ), data: { method: 'delete', confirm: 'Are you sure?' } }
												%i.fa.fa-trash-o
												Delete!

- if Picture.trash.present?
	.pull-right{ style: 'margin-right:2em;' }
		%a{ href: empty_trash_picture_admin_index_path, data: { method: 'delete', confirm: 'Are you sure?' } }
			%btn.btn.btn-danger
				empty trash

= render 'new_modal'